<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col col-sm-8">
      <h1>Convict <%= @criminal.name %></h1>
      <%= simple_form_for [@criminal, @conviction] do |f| %>
        <%= f.association :crime, collection: @crimes, include_blank: false %>
        <%= f.submit 'CONVICT', class: 'btn btn-danger mt-2' %>
      <% end %>
    </div>
  </div>
</div>
